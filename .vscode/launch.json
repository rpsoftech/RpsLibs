// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension In Dev Mode",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/dist/packages/vscode-ext/sql-table-to-json"
      ],
      "internalConsoleOptions": "openOnFirstSessionStart",
      "outFiles": [
        "${workspaceFolder}/dist/packages/vscode-ext/sql-table-to-json"
      ],
    //   "preLaunchTask": "${defaultBuildTask}"
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/dist/packages/vscode-ext/sql-table-to-json/src/test/suite/index.js"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/packages/vscode-ext/sql-table-to-json/src/test/**/*.js"
      ],
    //   "preLaunchTask": "${defaultBuildTask}"
    }
  ]
}
